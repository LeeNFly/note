.shop-item {
  display: flex;
}
.shop-item .shop-img {
  flex: 1;
  height: 200rpx;
}
.shop-item .shop-info {
  flex: 3;
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  color: #999999;
  font-size: 32rpx;
  position: relative;
}
.shop-item .title {
  color: #333;
}

.shop-item .score {
  position: absolute;
  right: 10rpx;
  padding: 5rpx 10rpx;
  background-color: #EE523D;
  border-radius: 10rpx;
  color: #fff;
}

.tips {
  text-align: center;
  background-color: #999999;
  padding: 10rpx 0;
}