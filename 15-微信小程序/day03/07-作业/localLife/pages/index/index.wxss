/**index.wxss**/
page {
  background-color: #DDDDDD;
}
swiper {
  height: 340rpx;
}
swiper .banner {
  width: 100%;
}

.nav {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
}

.nav-item {
  width: 33.33%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  box-sizing: border-box;
}
.nav-item image {
  width: 80rpx;
}
.nav-item text {
  margin-top: 20rpx;
}

.links {
  display: flex;
  margin-top: 30rpx;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
  padding: 20rpx 0;
}

.links image {
  width: 340rpx;
}